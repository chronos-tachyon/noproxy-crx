{
    "manifest_version": 2,
    "name": "__MSG_extName__",
    "description": "__MSG_extDescription__",
    "version": "0.9.0",
    "default_locale": "en",
    "icons": {
      "16": "img/icon16.png",
      "32": "img/icon32.png",
      "128": "img/icon128.png"
    },
    "background": {
      "scripts": ["js/background.js"],
      "persistent": false
    },
    "browser_action": {
        "default_icon": {
          "19": "img/icon19.png",
          "38": "img/icon38.png"
        },
        "default_title": "__MSG_extName__"
    },
    "permissions": ["proxy", "storage"],
    "content_security_policy": "default-src 'self'"
}
